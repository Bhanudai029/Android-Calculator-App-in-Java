<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1E23"
    android:padding="12dp">

    <!-- Header with Toggle and History -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp">

        <ImageButton
            android:id="@+id/btnToggleMode"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_icon_bg"
            android:src="@drawable/ic_scientific_off"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:contentDescription="Toggle Scientific Mode" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_icon_bg"
            android:src="@drawable/ic_history"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:contentDescription="History" />
    </LinearLayout>

    <!-- Display Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="bottom|end"
        android:paddingHorizontal="16dp"
        android:paddingBottom="20dp">

        <!-- Expression (e.g., 9×9) -->
        <TextView
            android:id="@+id/displayExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:fontFamily="sans-serif-light"
            android:maxLines="2"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="24sp"
            android:autoSizeMaxTextSize="40sp" />

        <!-- Live Result Preview (e.g., = 81) -->
        <TextView
            android:id="@+id/displayResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#888888"
            android:textSize="28sp"
            android:fontFamily="sans-serif-light"
            android:maxLines="1" />
    </LinearLayout>

    <!-- Scientific Row 1 (Hidden by default) -->
    <LinearLayout
        android:id="@+id/scientificRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <Button android:id="@+id/btnSin" style="@style/CalcButtonFunction" android:text="sin" android:layout_weight="1" />
        <Button android:id="@+id/btnCos" style="@style/CalcButtonFunction" android:text="cos" android:layout_weight="1" />
        <Button android:id="@+id/btnTan" style="@style/CalcButtonFunction" android:text="tan" android:layout_weight="1" />
        <Button android:id="@+id/btnLog" style="@style/CalcButtonFunction" android:text="log" android:layout_weight="1" />
    </LinearLayout>

    <!-- Scientific Row 2 (Hidden by default) -->
    <LinearLayout
        android:id="@+id/scientificRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <Button android:id="@+id/btnSqrt" style="@style/CalcButtonFunction" android:text="√" android:layout_weight="1" />
        <Button android:id="@+id/btnSquare" style="@style/CalcButtonFunction" android:text="x²" android:layout_weight="1" />
        <Button android:id="@+id/btnPower" style="@style/CalcButtonFunction" android:text="xⁿ" android:layout_weight="1" />
        <Button android:id="@+id/btnReciprocal" style="@style/CalcButtonFunction" android:text="1/x" android:layout_weight="1" />
    </LinearLayout>

    <!-- Main Calculator Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <!-- Row: Constants & Clear -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button android:id="@+id/btnPi" style="@style/CalcButtonFunction" android:text="π" android:layout_weight="1" />
            <Button android:id="@+id/btnE" style="@style/CalcButtonFunction" android:text="e" android:layout_weight="1" />
            <Button android:id="@+id/btnClear" style="@style/CalcButtonClear" android:text="C" android:layout_weight="1" />
            <Button android:id="@+id/btnBackspace" style="@style/CalcButtonClear" android:text="⌫" android:layout_weight="1" />
        </LinearLayout>

        <!-- Row 7 8 9 ÷ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button android:id="@+id/btn7" style="@style/CalcButtonNumber" android:text="7" android:layout_weight="1" />
            <Button android:id="@+id/btn8" style="@style/CalcButtonNumber" android:text="8" android:layout_weight="1" />
            <Button android:id="@+id/btn9" style="@style/CalcButtonNumber" android:text="9" android:layout_weight="1" />
            <Button android:id="@+id/btnDivide" style="@style/CalcButtonOperator" android:text="÷" android:layout_weight="1" />
        </LinearLayout>

        <!-- Row 4 5 6 × -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button android:id="@+id/btn4" style="@style/CalcButtonNumber" android:text="4" android:layout_weight="1" />
            <Button android:id="@+id/btn5" style="@style/CalcButtonNumber" android:text="5" android:layout_weight="1" />
            <Button android:id="@+id/btn6" style="@style/CalcButtonNumber" android:text="6" android:layout_weight="1" />
            <Button android:id="@+id/btnMultiply" style="@style/CalcButtonOperator" android:text="×" android:layout_weight="1" />
        </LinearLayout>

        <!-- Row 1 2 3 − -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button android:id="@+id/btn1" style="@style/CalcButtonNumber" android:text="1" android:layout_weight="1" />
            <Button android:id="@+id/btn2" style="@style/CalcButtonNumber" android:text="2" android:layout_weight="1" />
            <Button android:id="@+id/btn3" style="@style/CalcButtonNumber" android:text="3" android:layout_weight="1" />
            <Button android:id="@+id/btnMinus" style="@style/CalcButtonOperator" android:text="−" android:layout_weight="1" />
        </LinearLayout>

        <!-- Row % 0 . + -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button android:id="@+id/btnPercent" style="@style/CalcButtonFunction" android:text="%" android:layout_weight="1" />
            <Button android:id="@+id/btn0" style="@style/CalcButtonNumber" android:text="0" android:layout_weight="1" />
            <Button android:id="@+id/btnDot" style="@style/CalcButtonNumber" android:text="." android:layout_weight="1" />
            <Button android:id="@+id/btnPlus" style="@style/CalcButtonOperator" android:text="+" android:layout_weight="1" />
        </LinearLayout>

        <!-- Row ± = -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button android:id="@+id/btnPlusMinus" style="@style/CalcButtonFunction" android:text="±" android:layout_weight="1" />
            <Button android:id="@+id/btnEquals" style="@style/CalcButtonEquals" android:text="=" android:layout_weight="3" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
